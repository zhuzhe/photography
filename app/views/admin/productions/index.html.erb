<ul class="breadcrumb">
<li>
	<%= link_to "首页", admin_path %>
	<span class="divider">/</span>
</li>
<li class='active'>
	<%= link_to "产品", '#'%>
</li>
</ul>
<div class="btn-group" style ='padding:0 0  20px 15px;'>
	<%= link_to '添加新产品', new_admin_production_path, :class => 'btn' %>
</div>

<table class='table table-striped'>
	<thead>
		<tr><th>#</th>
				<th>名称</th>
				<th>类型</th>
				<th>更新时间</th>
				<th>创建时间</th></tr>
	</thead>
	<tbody>
		<% @admin_productions.each_with_index do |m, index| %>
		    <tr>
		    	<td><%= index + 1%></td>
		    	<td><%= link_to m.name, m %></td>
		    	<td><%= m.category_text %></td>
		     	<th><%= m.updated_at.to_s(:db)%></th>
		        <td><%= m.created_at.to_s(:db) %></td>
		    </tr>
		<% end %>
	</tbody>
</table>



