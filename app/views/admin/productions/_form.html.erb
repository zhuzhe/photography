<%= form_for(@admin_production, :html => {:class => 'form-horizontal'}) do |f| %>

  <fieldset>
  <legend>填写产品信息</legend>
    <% if @admin_production.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@admin_production.errors.count, "error") %> prohibited this admin_production from being saved:</h2>

        <ul>
        <% @admin_production.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="control-group">
      <label class="control-label" for="input01">名称</label>
      <div class="controls">
        <%=f.text_field :name, :class => 'input-xlarge'%>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input01">类型</label>
      <div class="controls">
        <%= f.select :category, [['艺术照', 1], ['婚纱照', 2]], :class => 'input-xlarge' %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input01">服装</label>
      <div class="controls">
        <%=f.text_area :clothing, :class => 'input-xlarge', :rows => 3%>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input01">拍摄时间</label>
      <div class="controls">
        <%=f.text_area :time, :class => 'input-xlarge', :rows => 3%>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input01">化妆</label>
      <div class="controls">
        <%=f.text_area :makeup, :class => 'input-xlarge', :rows => 3%>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input01">场景</label>
      <div class="controls">
        <%=f.text_area :place, :class => 'input-xlarge', :rows => 3%>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input01">服务</label>
      <div class="controls">
        <%=f.text_area :service, :class => 'input-xlarge', :rows => 3%>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input01">照片</label>
      <div class="controls">
        <%=f.text_area :photos, :class => 'input-xlarge', :rows => 3%>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input01">赠品</label>
      <div class="controls">
        <%=f.text_area :gift, :class => 'input-xlarge', :rows => 3%>
        <p class="help-block">每一项赠品以空格分割,例：相簿 礼物 花瓶</p>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input01">提示</label>
      <div class="controls">
        <%=f.text_area :tip, :class => 'input-xlarge', :rows => 3%>
      </div>
    </div>
    <div class='form-actions'>
      <button class='btn btn-primary' type='submit'>保存</button>
    </div>
  </fieldset>
</form>
<% end -%>